<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--contentDescription was not added, since it will mask the hint.-->
    <EditText
        android:id="@+id/dialog_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/add_stock_layout_margin_std"
        android:layout_marginStart="@dimen/add_stock_layout_margin_std"
        android:layout_marginEnd="@dimen/add_stock_layout_margin_std"
        android:layout_marginTop="@dimen/add_stock_layout_margin_top"
        android:hint="@string/dialog_hint"
        android:digits="@string/restriction_symbol_uppercase_letters_only"
        android:inputType="textCapCharacters"
        />
    <!--android:contentDescription="@string/add_a_new_stock_symbol" has been removed
    due to the following code inspection message:

    Do not set both 'contentDescription' and 'hint': the 'contentDescription' will mask
     the 'hint'
    -->

</LinearLayout>
